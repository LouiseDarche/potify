<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-pots">
        <h2>Add your plant !</h2>
        <%= simple_form_for(@pot) do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <%= f.input :name, placeholder: "Add a name to your plant" %>
              </div>
              <div class="col-xs-6">
                <%= f.association :plant, collection: Plant.all %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <%= f.input :description, placeholder: "Type anything you love about this plant!" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <%= f.input :photo %>
              </div>
            </div>
            <%= f.input :adoption_date %>
            <%= f.input :last_watering %>
            <%= f.input :last_potting %>
            <%= f.input :last_fertilizing %>
            <%= f.input :last_cutting %>
            <%= f.input :recipient_size, collection: ["small", "medium", "large"] %>
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
