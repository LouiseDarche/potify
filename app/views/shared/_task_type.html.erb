tasks
task.pot -->
<div>
  <span class="task-title-badge">
    <span class="h3"><%= task_name.upcase %></span>
    <div class="task-badge">
      <%= render "shared/badge" %>
    </div>
  </span>
  <% tasks.each do |task| %>
    <div>
      <!-- <p>Hey, give <%#= task.pot.name %> <%#= task.pot.plant.send("#{task.name}_quantity")%></p> -->
      <p><%= task.pot.name.capitalize %></p>
      <%= cl_image_tag(task.pot.photo, width: '400') %>
      <div class="task-description">
          <%= simple_form_for(task, :defaults => { :input_html => { :class => "sweet-alert-demo" } }, remote: true) do |f| %>
            <div class="task-content" data-points="<%= task.points %>">
              <table class="task-position">
                <tr>
                  <td>
                    <div class="status">
                      <%= f.input :completed, label: "  I did it" %>
                      <%= f.submit :update, class: "hidden submit-task" %>
                    </div>
                  </td>
                </tr>
              </table>
            </div>
          <% end %>
        </div>
    </div>
  <% end %>
</div>
