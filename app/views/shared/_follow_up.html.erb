<div>
  <h4>You took care of <%= pot.name %> <%= pluralize pot.tasks.count, "time" %> since you met ðŸ˜˜</h4>
  <% pot.tasks.each do |task| %>
  <% unless task.nil? %>
    <div class="task-follow-up">
      <h5><%= task.name.capitalize %></h5>
      <p>Last <%= task.name %> : <%= pot.send("last_#{task.name}").strftime("%b %d, %Y") %></p>
      <p>Next <%= task.name %>: <%= pot.next_task_date(task.name).strftime("%b %d, %Y") %></p>
      <p><%= pluralize pot.tasks.where(name: task.name).count, "time" %> since you met</p>
    </div>
  <% end %>
  <% end %>
</div>
