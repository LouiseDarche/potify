<div class="navbar-potify">
  <!-- Search Bar & Discover button -->
  <div class="navbar-titles col-xs-6 col-md-4 hidden-xs hidden-sm ">

    <%= link_to "SEARCH", "#", class: "navbar-potify-item navbar-potify-link" %>
    <%= link_to "DISCOVER", "#", class: "navbar-potify-item navbar-potify-link", id:"navbar-items-beside-title-left"%>
  </div>

  <!-- Logo -->
  <div class="col-offset-12 col-xs-12 col-md-4">
    <%= link_to root_path, class: "navbar-potify-brand" do %>
      <h1 class="navbar-potify-brand">potify</h1>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-titles col-xs-6 col-md-4 hidden-xs hidden-sm">
    <%= link_to "ADD A PLANT", "#", class: "navbar-potify-item navbar-potify-link", id:"navbar-items-beside-title-right" %>

    <% if user_signed_in? %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-potify-item right">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-potify-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-potify-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-potify-item navbar-potify-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-potify-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-potify-dropdown-menu">
        <li><a href="#">SEARCH</a></li>
        <li><a href="#">DISCOVER</a></li>
        <li><a href="#">ADD A PLANT</a></li>
        <!-- log out link -->
      </ul>
    </div>
  </div>
</div>

