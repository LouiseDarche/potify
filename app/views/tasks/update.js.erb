function refreshForm(newForm) {
  const innerForm = document.getElementById("task_completed");
  innerForm.innerHTML = newForm;
}
<%if @task.name === "watering" %>
  <% if @task.errors.any? %>
    refreshForm('<%= j render "pots/form", watering: @watering %>');
  <% else %>
    bindSweetAlertButtonDemo('<%= @pot.task.name %>');
  <% end %>
<% end %>



