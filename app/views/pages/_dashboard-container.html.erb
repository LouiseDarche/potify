  <div class="row">
    <div class="col-xs-12">
      <div class="welcome-heading">
        <h3 class="welcome-title">Welcome <%= user.status %> !</h3>
          <% if user.is_master %>
            <div>You have become a real master on taking care of plants. Stay tuned for upcoming rewards!</div>
          <% else %>
            <div>You are <%= user.left_for_next_status %> points away from <%= user.next_status %></div>
         <% end %>
        <div class="player-badges">
          <div class="player-stats">
            <div class="points-circle">
              <%= render "shared/points", user: current_user %>
            </div>
          </div>
          <div class="player-stats">
            <div class="points-circle">
              <div class="points">
                <span class="counter_points"><%= user.pots.size %></span>
                <%= "plant".pluralize(user.pots.size) %>
              </div>
            </div>
          </div>
          <div class="player-stats">
            <div class="points-circle">
              <div class="points">
                <span class="counter_points"><%= user.count_tasks %></span>
                <%= "action".pluralize(user.count_tasks) %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="top-dashboard">
        <div class="col-xs-12 col-md-6">
          <div class="user-task-title">
            <h3>My tasks</h3>
            <% if current_user.count_tasks > 0 %>
              <p>You have <span id="counter_tasks"><%= pluralize current_user.count_tasks, "task"%></span> to perform today </p>
            <% else %>
              <p>Well done!! Enjoy your day!</p>
            <% end %>
          </div>
          <div class="user-tasks inner-padding">
            <% if current_user.count_tasks > 0 %>
              <% Task::TASKS.each do |task_name| %>
                <% if current_user.count_tasks_by_name(task_name) > 0  %>
                  <div class="task-title-card">
                    <span class="task-title-badge">
                      <span class="span-paytone"><%= task_name.upcase %></span>
                      <div class="task-badge">
                        <%= render "shared/badge", task_name: task_name %>
                      </div>
                    </span>
                    <div class="task-title">
                      <%= render "shared/task_type", tasks: Task.includes(:pot).where(name: task_name, completed: false, pot: current_user.pots), task_name: task_name %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% else %>
              <div class="image-height-300">
                <img src="https://cdn.dribbble.com/users/729829/screenshots/2547652/galshir-cacti.gif" alt="" >
              </div>
              <div class="white-square">
              </div>
            <% end %>
          </div>

        </div>
      <div class="col-xs-12 col-md-6">
        <div class="user-ranking">
          <h3>üèÜ HIGHEST SCORES üèÜ</h3>
          <div class="user-gained-points">
            <!-- points, plants, actions -->
          </div>
          <div class="ranking-table">
            <%= render "shared/ranking" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="user-garden">
      <h3>My garden</h3>
      <% pots.each do |pot|%>
        <div class="col-xs-12 col-md-4">
          <%= link_to pot_path(pot) do %>
            <%= render "shared/card", element: pot, select: false %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12">
      <div class="item-border-green">
        <%= link_to "+ add a plant", new_pot_path, class: "link-border-green-item-border-green" %>
      </div>
    </div>
  </div>



