        </div>
        <div class="reminder">
          <%= image_tag("reminder.png", size: 60) %>
          Need more information? We got it covered
        </div>
        <div class="reminder">
          <%= image_tag("points.png", size: 60) %>
          Earn points when you complete your tasks !
        </div>
      </div>
    </div>
    <div class="cards-content">
      <!-- link to other pots from other users -->
      <h2>OUR HAPPIEST POTS</h2>
        <p class="source-font">Their masters know how to please them !</p>

      <%= render "shared/home_cards", elements: @pots %>
      <%= link_to "SEE MORE", pots_path, class: "navbar-potify-link btn btn-minimal in-banner" %>
    </div>
